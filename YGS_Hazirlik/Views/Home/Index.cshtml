<body class="login-body">
    <div class="container">
        <form class="form-signin" action="Home/Index" method="post">
            <h2 class="form-signin-heading">Şimdi Giriş Yap</h2>
            <div class="login-wrap">
                <input type="text" class="form-control" maxlength="20" name="kullaniciadi" placeholder="Kullanıcı Adı" autofocus>
                <input type="password" class="form-control" maxlength="20"  name="parola" placeholder="Parola">
                <label class="checkbox">
                    <input type="checkbox" value="beni hatırla"> Beni Hatırla
                    <span class="pull-right">
                        <a data-toggle="modal" href="#"> Parolanı mı unuttun?</a>
                    </span>
                </label>
                <button class="btn btn-lg btn-login btn-block" type="submit">Giriş Yap</button>
            </div>

        </form>
    </div>
    <script src="/Content/Admin/js/jquery.js"></script>
